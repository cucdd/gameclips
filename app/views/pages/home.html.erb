<%= content_for :page_title, 'Home - Game Clips' %>
<% if user_signed_in? %>
  <div class="row">
    <section class="col-lg-6">
      <div class="page-header">
        <%= link_to "Upload New Clip", '#upload', id: "frm-btn" ,class: "btn btn-primary btn-large" %>
        <%= render :partial => 'screens/new', :locals => {:screen => Screen.new} %>
      </div>

      <div class="cycle-slideshow">
        <% current_user.screens.each do |scr| %>
          <%= image_tag scr.image.url, :style => "width:550px; height:350px;" %>
        <% end %>
      </div>
    </section>
 
    <aside class="col-lg-5 col-offset-1">
      <div class="page-header">
        <h3>What others are uploading</h3>
      </div>
    </aside>
  </div>
<% else %>
  <div class="row">
    <section class="col-lg-5 col-offset-1">
      <div class="page-header">
        <h1>Latest Clips</h1>
      </div>

      <div class="cycle-slideshow">
        <% latest_screens.each do |ls| %>
        <%= image_tag ls.image.url, :style => "width:500px; height:400px;" %>
        <% end %>
      </div>
    </section>
    
    <section class="col-lg-4 col-offset-2">
      <div class="page-header">
        <h1>The stage is set!</h1>
      </div>
      <%= render :partial => '/devise/registrations/new' %>
      <%= link_to "Sign up", '#sign_up', id: "frm-btn", class: "btn btn-success" %> <h3>or</h3>

      <%= link_to "Sign in", "#sign_in", class: "btn btn-primary", :data => {:toggle => "modal"} %>
      <%= render :partial => '/devise/sessions/new' %>
    </section>
  </div>

  <div class="row">
    <div class="spacer"></div>
  </div>

  <div class="row">
    <aside class="col-lg-5 col-offset-1">
      <div class="page-header">
        <h1>Follow other gamers.</h1>
        <h1>Make connections</h1>  
      </div>
    </aside>    
  </div>

  <div class="row">
    <div class="spacer"></div>
  </div>

  <div class="row">
    <aside class="col-lg-5 col-offset-7">
      <div class="page-header">
        <h1>Create gaming events</h1>
      </div>
    </aside>
  </div>
<% end %>
