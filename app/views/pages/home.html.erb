<%= content_for :page_title, 'Home - Game Clips' %>
<% if user_signed_in? %>
  <div class="row">
    <section class="col-lg-6">
      <div class="page-header">
        <%= link_to "Upload New Clip", '#collapse', id: "new-scr-button" ,class: "btn btn-primary btn-large" %>
        <%= render :partial => 'screens/new', :locals => {:screen => Screen.new} %>
      </div>

      <div class="cycle-slideshow">
        <% current_user.screens.each do |scr| %>
          <%= image_tag scr.image.url, :style => "width:550px; height:350px;" %>
        <% end %>
      </div>
    </section>
 
    <aside class="col-lg-5 col-offset-1">
      <div class="page-header">
        <h3>What others are uploading</h3>
      </div>
    </aside>
  </div>
<% else %>
  <div class="row">
    <section class="col-lg-5 col-offset-1">
      <div class="page-header">
        <h1>Latest Clips</h1>
      </div>

      <div class="cycle-slideshow">
        <% latest_screens.each do |ls| %>
        <%= image_tag ls.image.url, :style => "width:400px; height:400px;" %>
        <% end %>
      </div>
    </section>
    
    <section class="col-lg-4 col-offset-2">
      <div class="page-header">
        <h1>The stage is set!</h1>
      </div>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-default btn-large" %> or
      <%= link_to "Sign in", new_user_session_path, class: "btn btn-default btn-large" %>
    </section>
  </div>
<% end %>
