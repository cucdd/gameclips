<%= content_for :page_title, 'Home - Game Clips' %>
<% if user_signed_in? %>
  <div class="row">
    <section class="col-lg-8">
      <% current_user.screens.each do |scr| %>
        <%= image_tag scr.image.url, :style => "width:400px; height:400px;" %>
      <% end %>  
    </section>
    
    <aside class="col-lg-4">
      <%= current_user.profile.name %>
      <%= image_tag current_user.profile.avatar.url(:thumb) %>
    </aside>
  </div>

  <div class="row pull-right">
    <%= link_to "Upload Clip", new_screen_path, class: "btn btn-primary btn-large" %>
  </div>
<% else %>
  <div class="row">
    <section class="col-lg-4 col-offset-3">
      <%= image_tag("home.jpg", :style => "width:300px; height:400px;") %>
    </section>
    
    <section class="col-lg-4 col-offset-1">
      <div class="page-header">
        <h1>The stage is set!</h1>
      </div>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-default btn-large" %> or
      <%= link_to "Sign in", new_user_session_path, class: "btn btn-default btn-large" %>
    </section>
  </div>
<% end %>
