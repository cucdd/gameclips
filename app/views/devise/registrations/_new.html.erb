<% resource.build_profile unless resource.profile %>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
                       :html => { :multipart => true, :id => 'frm-collapse' }) do |f| %>
  <%= devise_error_messages! %>
 
  <%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :placeholder => "user@example.com" %>

  <%= f.label :password %>
  <%= f.password_field :password, :placeholder => "8 characters min"%>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br />
       
  <%= f.submit "Sign up", class: "btn btn-success btn-primary" %>
<% end %>
