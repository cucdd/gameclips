<% resource.build_profile unless resource.profile %>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
                       :html => { :multipart => true, :id => 'sign_up_form' }) do |f| %>
  <%= devise_error_messages! %>
 
  <%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :placeholder => "user@example.com", :required => true %>

  <%= f.label :password %>
  <%= f.password_field :password, :placeholder => "8 characters min", :required => true %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :placehoder => "same as above", :required => true %><br />
       
  <%= f.submit "Sign up", class: "btn submit" %>
<% end %>
