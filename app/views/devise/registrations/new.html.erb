<%= content_for :page_title, 'Sign up - Game Clips' %>

<div class="row">
  <%= devise_error_messages! %>
  <div class="col-lg-4 well">
    <% resource.build_profile unless resource.profile %>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
      <%= field_set_tag 'Sign up' do %>

        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, :placeholder => "user@example.com" %>

        <%= f.label :password %>
        <%= f.password_field :password, :placeholder => "8 characters min"%>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %><br />
        
        <%= f.submit "Sign up", class: "btn btn-success btn-primary" %>
      <% end %>
  </div>
  <% end %>
</div>

<div class="row col-lg-2">
  <%= render "devise/shared/links" %>
</div>
