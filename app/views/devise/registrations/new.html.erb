<%= content_for :page_title, 'Sign up - Game Clips' %>

<div class="row">
  <div class="col-lg-4 well">
    <% resource.build_profile unless resource.profile %>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
      <%= field_set_tag 'Sign up' do %>     
        <%= devise_error_messages! %>

        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, :placeholder => "user@example.com" %>

        <%= f.label :password %>
        <%= f.password_field :password, :placeholder => "8 characters min"%>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
        
        <%= f.submit "Sign up", class: "btn btn-success btn-primary" %>
      <% end %>
  </div>
  <div class="col-lg-4 col-offset-1 well"

        <%= field_set_tag 'Profile (Optional)' do %>
          <%= f.fields_for :profile do |p| %>
            <%= p.label :name %>
            <%= p.text_field :name, :placeholder => "e.g John Doe" %>

            <%= p.label :hardware %>
            <%= p.text_area :hardware, :cols => "30", :rows => "4",
                            :placeholder => "MSI GTX 580 (OC to 900Mhz) Intel i5-2500k (OC 3.8Ghz) 8GB Ram" %>

            <%= p.label :avatar %>
            <%= p.file_field :avatar %>
          <% end %>
        <% end %>
  </div>   
    <% end %>
</div>

<%= render "devise/shared/links" %>
